<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Manduin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Manduin">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="headerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="subHeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="actionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="customInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/custom_input_outline_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/gray_card</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/gray_card</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/light_blue_200</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonLogout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="buttonAddReview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/light_blue_200</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greetingsText">
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="sliderPlaceText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="sliderLocationText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="titleNewsText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="descriptionNewsText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fullNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="emailText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="buttonBookmark">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="buttonBack">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="placeActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="buttonMaps">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="iconSize">32dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="descriptionLandmarkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="userReviewText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="reviewText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="dateText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/date</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="addReviewText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="backgroundTint">@color/gray_card</item>
    </style>

    <style name="placeText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="locationText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>