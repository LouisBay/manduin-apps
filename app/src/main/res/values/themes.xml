<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Manduin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Manduin">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="headerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="subHeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="customInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/custom_input_outline_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/gray_card</item>
    </style>

    <style name="editText">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>